# =============================================================================
# Environment Variables - Inference Security CTF
# =============================================================================
# Copy this file to .env.local for local development.
# In production, set these variables in your deployment environment.
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------

# App name and version
NEXT_PUBLIC_APP_NAME="Inference Security CTF"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# Base URL (used for OAuth callbacks)
NEXTAUTH_URL=http://localhost:3000

# Secret for NextAuth.js session encryption (generate with: openssl rand -base64 32)
NEXTAUTH_SECRET=your-nextauth-secret-change-in-production

# -----------------------------------------------------------------------------
# Authentication - Auth0 (Recommended for Production)
# -----------------------------------------------------------------------------
# Get these from your Auth0 Dashboard:
# https://manage.auth0.com/

AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret
AUTH0_ISSUER=https://your-tenant.auth0.com

# -----------------------------------------------------------------------------
# Authentication - Google OAuth (Optional - can use via Auth0)
# -----------------------------------------------------------------------------
# Get these from Google Cloud Console:
# https://console.cloud.google.com/apis/credentials

GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# -----------------------------------------------------------------------------
# Authentication - GitHub OAuth (Optional)
# -----------------------------------------------------------------------------
# Get these from GitHub Developer Settings:
# https://github.com/settings/developers

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# -----------------------------------------------------------------------------
# Authentication - Basic Auth (For simple deployments)
# -----------------------------------------------------------------------------
# If using basic email/password auth without Auth0

# JWT secret for signing tokens (generate with: openssl rand -base64 32)
JWT_SECRET=your-jwt-secret-change-in-production

# JWT expiration time
JWT_EXPIRES_IN=7d

# -----------------------------------------------------------------------------
# Database (Required for production)
# -----------------------------------------------------------------------------
# PostgreSQL connection string
# DATABASE_URL=postgresql://user:password@localhost:5432/inference_ctf?schema=public

# Or use Supabase:
# SUPABASE_URL=https://your-project.supabase.co
# SUPABASE_ANON_KEY=your-anon-key
# SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# -----------------------------------------------------------------------------
# LLM Providers (Optional - users can set their own)
# -----------------------------------------------------------------------------
# These are optional defaults. Users typically enter their own API keys.

# Anthropic Claude
# ANTHROPIC_API_KEY=sk-ant-your-key

# OpenAI
# OPENAI_API_KEY=sk-your-key

# F5/CalypsoAI Guardrails
# CALYPSO_API_KEY=your-calypso-key
# NEXT_PUBLIC_DEFAULT_GUARDRAILS_ENDPOINT=https://api.calypsoai.com/v1/guardrails

# Local LLM (Ollama)
# NEXT_PUBLIC_DEFAULT_LOCAL_LLM_ENDPOINT=http://localhost:11434

# -----------------------------------------------------------------------------
# Analytics & Monitoring (Optional)
# -----------------------------------------------------------------------------

# Disable Next.js telemetry
NEXT_TELEMETRY_DISABLED=1

# PostHog analytics (optional)
# NEXT_PUBLIC_POSTHOG_KEY=your-posthog-key
# NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Sentry error tracking (optional)
# SENTRY_DSN=your-sentry-dsn
